<div class="container">
  <div class="row justify-content-center">
    <div class="col-auto">
      <h1>Movie Lists</h1>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-auto">
      <ul>
        <% @lists.each do |list| %>
          <li><%= link_to list.name, list_path(list) %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-auto">
      <%= link_to 'Add a new list', new_list_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
