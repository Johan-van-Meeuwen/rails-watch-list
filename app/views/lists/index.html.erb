<div class="container">
  <div class="row">
    <div class="col align-items-center">
      <h1>Movie Lists</h1>
    </div>
  <div class="col align-items-center">
    <ul>
      <% @lists.each do |list| %>
        <li><%= link_to list.name, list_path(list) %></li>
      <% end %>
    </ul>
  </div>
  <div class="col align-items-center">
    <%= link_to 'Add a new list', new_list_path, class: "btn btn-primary" %>
  </div>
  </div>
</div>
