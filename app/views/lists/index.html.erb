<div class="banner" style="background-image: url(<%= asset_path 'index_banner_image.jpg' %>);">
  <div class="container">
    <h1 class="display-1">Movie Lists</h1>
    <%= link_to 'Add movie list', new_list_path, class: "custom-button" %>
  </div>
</div>

<div class="container mt-5">
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-sm-12 col-md-12 col-lg-6">
        <%= link_to list_path(list), class: "text-decoration-none" do %>
          <div class="card-category my-2" style="background-image: url(<%= cl_image_path list.photo.key, crop: :fill %>);">
            <%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
